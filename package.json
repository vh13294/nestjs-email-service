{
  "name": "nestjs-email-service",
  "version": "0.0.1",
  "description": "NestJs email module",
  "keywords": [
    "nestjs",
    "email"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.json",
    "postbuild": "cd sample && npm install $(npm pack ../ | tail -1)",
    "update": "npx npm-check-updates -u && cd sample && npx npm-check-updates -u",
    "format": "prettier --write \"lib/**/*.ts\" \"lib/**/*.tsx\" \"test/**/*.ts\"",
    "lint": "eslint \"{lib,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest"
  },
  "author": "Vong Panha Huot",
  "license": "MIT",
  "devDependencies": {
    "@nestjs/common": "^7.5.5",
    "@nestjs/core": "^7.6.4",
    "@types/express": "^4.17.9",
    "@types/jest": "26.0.19",
    "@types/mjml": "^4.7.0",
    "@types/mjml-react": "^1.0.4",
    "@types/node": "^14.14.16",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "jest": "26.6.3",
    "node-html-to-image": "^3.1.0",
    "prettier": "^2.2.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "ts-jest": "26.4.4",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "@nestjs/common": "^7.6.4"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.4.0",
    "mjml": "^4.7.1",
    "mjml-react": "^1.0.62",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "tsx"
    ],
    "modulePathIgnorePatterns": [
      "sample"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(ts|js|tsx)$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "testTimeout": 100000
  }
}
